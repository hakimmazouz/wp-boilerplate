<!DOCTYPE html>
<html lang="en">
<head>
	{% include 'html-head.twig' %}
</head>
<body>

	<noscript>
		{% include 'noscript.twig' %}
	</noscript>

	<nav>
		<a href="{{site.url}}" data-namespace="home">Home</a>
	</nav>

	<div id="content" class="relative w-100 h-100">
		{% block content %}
			<div class="page" data-namespace="home">
		    {% if posts %}
					<h1>{{site.title}}</h1>
		      <ul>
		        {% for post in posts %}
		          <li>
		            <a href="{{post.link|relative}}" data-namespace="single">{{post.title}}</a>
		          </li>
		        {% endfor %}
		      </ul>
				{% else %}
		      <p>No posts.</p>
		    {% endif %}
			</div>
		{% endblock %}
	</div>

	<script>
		window.__WP_VARS = {
			THEME_URI: '{{site.theme.uri}}',
			BASE_URL: '{{site.url}}',
			RELATIVE_BASE_URL: '{{site.url|relative}}',
		}
	</script>
	<script src="https://cdn.polyfill.io/v2/polyfill.js?features=default"></script>
  <script src="{{site.theme.link}}/bundle.js" defer></script>
	{{ wp_footer }}
</body>
</html>
